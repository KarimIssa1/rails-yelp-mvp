<h1>Add a Review for <%= @restaurant.name %></h1>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating, collection: 0..5, as: :select, label: "Rating (0-5)" %>
  <%= f.input :content, as: :text, label: "Review Content" %>
  <%= f.button :submit, "Submit Review" %>
<% end %>
<%= link_to 'Back to Restaurant', restaurant_path(@restaurant), class: 'btn btn-secondary' %>
