<%= simple_form_for [@restaurant, review], html: { class: 'form-horizontal' } do |f| %>
  <%= f.input :rating, collection: 0..5, as: :select, prompt: "Select a Rating", input_html: { class: 'form-select' } %>
  <%= f.input :content, as: :text, input_html: { class: 'form-control' }, label: "Your Review" %>
  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>
