<h1>Add a New Restaurant</h1>
<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: ['chinese', 'italian', 'japanese', 'french', 'belgian'], prompt: "Select a Category" %>
  <%= f.button :submit, "Create Restaurant" %>
<% end %>
<%= link_to 'Back to List', restaurants_path, class: 'btn btn-secondary' %>
