<div class="container mt-3">
  <div class="card">
    <div class="card-body">
      <h1 class="card-title"><%= @restaurant.name %></h1>
      <h5 class="card-subtitle mb-2 text-muted"><%= @restaurant.category.capitalize %></h5>
      <p class="card-text"><%= @restaurant.address %></p>
      <p class="card-text"><%= @restaurant.phone_number %></p>
    </div>
  </div>

  <h3 class="mt-4">Reviews</h3>
  <ul class="list-group">
    <% @reviews.each do |review| %>
      <li class="list-group-item">
        <strong>Rating:</strong> <%= review.rating %><br>
        <%= review.content %>
      </li>
    <% end %>
  </ul>

  <h3 class="mt-4">Add a Review</h3>
  <%= render 'reviews/form', review: @review %>

  <%= link_to 'Back to List', restaurants_path, class: 'btn btn-secondary mt-3' %>
</div>
