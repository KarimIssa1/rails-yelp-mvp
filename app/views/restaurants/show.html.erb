<h1><%= @restaurant.name %></h1>
<p>
  Address: <%= @restaurant.address %><br>
  Phone: <%= @restaurant.phone_number %><br>
  Category: <%= @restaurant.category %>
</p>

<h2>Reviews</h2>
<% @reviews.each do |review| %>
  <div>
    <p><strong>Rating:</strong> <%= review.rating %></p>
    <p><%= review.content %></p>
  </div>
<% end %>

<h3>Add a Review</h3>
<%= simple_form_for [@restaurant, Review.new] do |f| %>
  <%= f.input :rating, collection: 0..5, as: :select, prompt: "Select a Rating" %>
  <%= f.input :content, as: :text, label: "Your Review" %>
  <%= f.button :submit, "Submit Review" %>
<% end %>

<%= link_to 'Back to List', restaurants_path, class: 'btn btn-secondary' %>
