<div class="container mt-4">
  <h1>Add a New Restaurant</h1>
  <%= simple_form_for @restaurant, html: { class: 'form-horizontal' } do |f| %>
    <div class="form-group">
      <%= f.input :name, label: 'Restaurant Name', input_html: { class: 'form-control' }, wrapper: false, label_html: { class: 'form-label' } %>
    </div>
    <div class="form-group">
      <%= f.input :address, label: 'Address', input_html: { class: 'form-control' }, wrapper: false, label_html: { class: 'form-label' } %>
    </div>
    <div class="form-group">
      <%= f.input :phone_number, label: 'Phone Number', input_html: { class: 'form-control' }, wrapper: false, label_html: { class: 'form-label' } %>
    </div>
    <div class="form-group">
      <%= f.input :category, collection: ['chinese', 'italian', 'japanese', 'french', 'belgian'], prompt: 'Select a Category', label: 'Category', input_html: { class: 'form-select' }, wrapper: false, label_html: { class: 'form-label' } %>
    </div>
    <div>
      <%= f.button :submit, "Create Restaurant", class: 'btn btn-primary' %>
    </div>
  <% end %>
  <%= link_to 'Back to List', restaurants_path, class: 'btn btn-secondary' %>
</div>
